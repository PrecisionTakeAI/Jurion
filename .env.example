# Enhanced Legal LLM Environment Configuration
# Copy this file to .env and update with your actual values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
APP_NAME=Legal LLM Enhanced
APP_VERSION=2.0.0
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration (for future use)
DATABASE_URL=sqlite:///legal_llm.db

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Document Processing Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,jpg,jpeg,png
DOCUMENT_STORAGE_PATH=./data/documents
ENABLE_OCR=True

# Multi-Jurisdiction Configuration
DEFAULT_JURISDICTION=united_states
SUPPORTED_JURISDICTIONS=united_states,australia,united_kingdom,canada

# AI Configuration
DEFAULT_MODEL=gpt-4
TEMPERATURE=0.1
MAX_TOKENS=2000
CONFIDENCE_THRESHOLD=0.6

# Web Interface Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_THEME_BASE=light

# Logging Configuration
LOG_FILE=./logs/legal_llm.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance Configuration
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10

# Compliance Configuration
ENABLE_AUDIT_LOGGING=True
AUDIT_LOG_FILE=./logs/audit.log
ENABLE_DATA_ENCRYPTION=True
ENABLE_SESSION_TRACKING=True

# Development Configuration
ENABLE_DEBUG_MODE=False
ENABLE_PROFILING=False
MOCK_AI_RESPONSES=False

